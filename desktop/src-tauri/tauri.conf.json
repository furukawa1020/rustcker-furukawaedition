{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "furukawa-desktop",
  "version": "0.1.0",
  "identifier": "com.furukawa.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Furukawa Desktop",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; connect-src 'self' http://127.0.0.1:2375 ws://localhost:5173; style-src 'self' 'unsafe-inline'; font-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "binaries/furukawad"
    ],
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}